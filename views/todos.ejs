<% layout("main") %>
  <% if (typeof todos != 'undefined') { %>
    <% todos.forEach(todo => { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= todo.title %></h5>
        <p class="card-text"><%= todo.text %></p>
        <div class="d-flex">
          <a href="#" class="btn btn-primary">Изменить</a>
          <% if(todo.done) { %>
            <a href="/todos/done/<%= todo._id %>/0" class="btn btn-success mx-2">Вернуть к разработке</a>
          <% } else { %>
            <a href="/todos/done/<%= todo._id %>/1" class="btn btn-danger mx-2">Завершить задачу</a>
          <% } %>
          <a href="/todos/remove/<%= todo._id %>" class="btn btn-danger" style="margin-left: auto;">Удалить</a>
        </div>
      </div>
    </div>
    <% }) %>
  <% } %>

  <nav aria-label="Page navigation example">
    <ul class="pagination mt-5">
      <li class="page-item"><a class="page-link" href="#">Previous</a></li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
  </nav>